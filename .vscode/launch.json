{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-webpack",
            "runtimeArgs": [
                "--remote-debugging-port=9223",
                "dev",
            ],
            "timeout": 60000,
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-webpack.cmd"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main with Developer Tools",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-webpack",
            "runtimeArgs": [
                "--remote-debugging-port=9223",
                "dev",
                "chromeDevTools"
            ],
            "timeout": 60000,
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron-webpack.cmd"
            }
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 60000
        }
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": [
                "Electron: Main",
                "Electron: Renderer"
            ]
        }
    ]
}